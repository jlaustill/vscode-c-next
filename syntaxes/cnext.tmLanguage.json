{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "C-Next",
  "scopeName": "source.cnext",
  "patterns": [
    { "include": "#comments" },
    { "include": "#preprocessor" },
    { "include": "#registers" },
    { "include": "#bitmaps" },
    { "include": "#template-types" },
    { "include": "#scope-access" },
    { "include": "#c-interop" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#literals" },
    { "include": "#strings" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cnext",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cnext",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "name": "meta.preprocessor.cnext",
          "match": "^\\s*#\\s*(include|define|ifdef|ifndef|endif|else|elif|pragma|error|warning)\\b.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cnext",
          "match": "\\b(if|else|for|while|do|switch|case|default|return|critical)\\b"
        },
        {
          "name": "keyword.other.cnext",
          "match": "\\b(register|scope|struct|enum|const|volatile|sizeof)\\b"
        },
        {
          "name": "storage.modifier.visibility.cnext",
          "match": "\\b(public|private)\\b"
        },
        {
          "name": "storage.modifier.overflow.cnext",
          "match": "\\b(clamp|wrap)\\b"
        },
        {
          "name": "storage.modifier.atomic.cnext",
          "match": "\\b(atomic)\\b"
        },
        {
          "name": "storage.modifier.cnext",
          "match": "\\b(rw|ro|wo|w1c|w1s)\\b"
        },
        {
          "name": "variable.language.cnext",
          "match": "\\b(this|global)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.cnext",
          "match": "\\b(u8|u16|u32|u64|i8|i16|i32|i64|f32|f64|bool|void|string|ISR)\\b"
        },
        {
          "name": "storage.type.bitmap.cnext",
          "match": "\\b(bitmap8|bitmap16|bitmap24|bitmap32)\\b"
        },
        {
          "name": "storage.type.bounded-string.cnext",
          "match": "\\bstring<[0-9]+>"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "meta.register.declaration.cnext",
          "begin": "\\b(register)\\s+(\\w+)\\s*(@)\\s*(0x[0-9a-fA-F]+|\\d+)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.register.cnext" },
            "2": { "name": "entity.name.type.register.cnext" },
            "3": { "name": "keyword.operator.address.cnext" },
            "4": { "name": "constant.numeric.cnext" },
            "5": { "name": "punctuation.definition.block.begin.cnext" }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.cnext" }
          },
          "patterns": [
            { "include": "#register-field" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "register-field": {
      "patterns": [
        {
          "match": "(\\w+)\\s*(:)\\s*(\\w+)\\s+(rw|ro|wo|w1c|w1s)\\s*(@)\\s*(0x[0-9a-fA-F]+|\\d+)",
          "captures": {
            "1": { "name": "entity.name.field.register.cnext" },
            "2": { "name": "punctuation.separator.colon.cnext" },
            "3": { "name": "storage.type.cnext" },
            "4": { "name": "storage.modifier.cnext" },
            "5": { "name": "keyword.operator.address.cnext" },
            "6": { "name": "constant.numeric.cnext" }
          }
        }
      ]
    },
    "bitmaps": {
      "patterns": [
        {
          "name": "meta.bitmap.declaration.cnext",
          "begin": "\\b(bitmap(?:8|16|24|32))\\s+(\\w+)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "storage.type.bitmap.cnext" },
            "2": { "name": "entity.name.type.bitmap.cnext" },
            "3": { "name": "punctuation.definition.block.begin.cnext" }
          },
          "end": "(\\})",
          "endCaptures": {
            "1": { "name": "punctuation.definition.block.end.cnext" }
          },
          "patterns": [
            { "include": "#bitmap-field" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "bitmap-field": {
      "patterns": [
        {
          "comment": "Multi-bit field: Mode[3]",
          "match": "(\\w+)\\s*(\\[)(\\d+)(\\])",
          "captures": {
            "1": { "name": "entity.name.field.bitmap.cnext" },
            "2": { "name": "punctuation.definition.bracket.begin.cnext" },
            "3": { "name": "constant.numeric.bitwidth.cnext" },
            "4": { "name": "punctuation.definition.bracket.end.cnext" }
          }
        },
        {
          "comment": "Single-bit field: Running",
          "match": "(\\w+)(?=\\s*,|\\s*$|\\s*//)",
          "captures": {
            "1": { "name": "entity.name.field.bitmap.cnext" }
          }
        }
      ]
    },
    "scope-access": {
      "patterns": [
        {
          "comment": "this.member or global.member access",
          "match": "\\b(this|global)\\s*(\\.)\\s*(\\w+)",
          "captures": {
            "1": { "name": "variable.language.cnext" },
            "2": { "name": "punctuation.accessor.cnext" },
            "3": { "name": "variable.other.member.cnext" }
          }
        },
        {
          "comment": "Scope.Member qualified access (e.g., Teensy4.GPIO7)",
          "match": "\\b([A-Z]\\w*)\\s*(\\.)\\s*(\\w+)",
          "captures": {
            "1": { "name": "entity.name.namespace.cnext" },
            "2": { "name": "punctuation.accessor.cnext" },
            "3": { "name": "variable.other.member.cnext" }
          }
        }
      ]
    },
    "template-types": {
      "patterns": [
        {
          "comment": "C++ template instantiation (e.g., FlexCAN_T4<CAN1, RX_SIZE_256>). Requires uppercase start to avoid false positives with comparison operators like 'if (x < y)'",
          "begin": "\\b([A-Z_][A-Za-z0-9_]*)\\s*(<)",
          "beginCaptures": {
            "1": { "name": "entity.name.type.template.cnext" },
            "2": { "name": "punctuation.definition.template.begin.cnext" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.template.end.cnext" }
          },
          "patterns": [
            {
              "comment": "Template argument - identifier (type or constant)",
              "match": "\\b([A-Z_][A-Za-z0-9_]*)\\b",
              "captures": {
                "1": { "name": "entity.name.type.template-argument.cnext" }
              }
            },
            {
              "comment": "Template argument - number",
              "match": "\\b([0-9]+)\\b",
              "captures": {
                "1": { "name": "constant.numeric.template-argument.cnext" }
              }
            },
            {
              "name": "punctuation.separator.template.cnext",
              "match": ","
            }
          ]
        }
      ]
    },
    "c-interop": {
      "patterns": [
        {
          "comment": "C library interop identifier with c_ prefix (nullable, ADR-046)",
          "match": "\\b(c_[a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "captures": {
            "1": { "name": "variable.other.c-interop.nullable.cnext" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compound.cnext",
          "match": "(\\+<-|-<-|\\*<-|/<-|%<-|&<-|\\|<-|\\^<-|<<<-|>><-)"
        },
        {
          "name": "keyword.operator.assignment.cnext",
          "match": "<-"
        },
        {
          "name": "keyword.operator.address.cnext",
          "match": "@"
        },
        {
          "name": "keyword.operator.comparison.cnext",
          "match": "(=|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.cnext",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.cnext",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.arithmetic.cnext",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.member.cnext",
          "match": "\\."
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.cnext",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.cnext",
          "match": "\\b(NULL)\\b"
        },
        {
          "name": "constant.numeric.hex.cnext",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.cnext",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.decimal.cnext",
          "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cnext",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cnext",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cnext",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cnext",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
