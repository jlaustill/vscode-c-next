{
  "name": "vscode-c-next",
  "displayName": "C-Next",
  "description": "Syntax highlighting, live C preview, and IntelliSense for C-Next, a safer C for embedded systems",
  "version": "1.0.0",
  "publisher": "jlaustill",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jlaustill/vscode-c-next"
  },
  "bugs": {
    "url": "https://github.com/jlaustill/vscode-c-next/issues"
  },
  "homepage": "https://github.com/jlaustill/vscode-c-next#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "c-next",
    "cnext",
    "embedded",
    "systems programming",
    "transpiler"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cnext",
        "aliases": [
          "C-Next",
          "cnext"
        ],
        "extensions": [
          ".cnx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cnext",
        "scopeName": "source.cnext",
        "path": "./syntaxes/cnext.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "cnext",
        "path": "./snippets/cnext.json"
      }
    ],
    "commands": [
      {
        "command": "cnext.openPreview",
        "title": "Open Preview",
        "category": "C-Next"
      },
      {
        "command": "cnext.openPreviewToSide",
        "title": "Open Preview to the Side",
        "category": "C-Next"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == cnext",
          "command": "cnext.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "cnext.openPreview",
          "when": "resourceLangId == cnext"
        },
        {
          "command": "cnext.openPreviewToSide",
          "when": "resourceLangId == cnext"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cnext.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == cnext"
      },
      {
        "command": "cnext.openPreviewToSide",
        "key": "ctrl+k v",
        "mac": "cmd+k v",
        "when": "resourceLangId == cnext"
      }
    ],
    "configuration": {
      "title": "C-Next",
      "properties": {
        "cnext.preview.updateDelay": {
          "type": "number",
          "default": 300,
          "description": "Delay in milliseconds before updating the preview after typing"
        },
        "cnext.preview.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in the C preview"
        },
        "cnext.includePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional include paths for resolving local #include \"header.h\" directives"
        },
        "cnext.sdkIncludePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "SDK include paths for resolving headers (e.g., Teensy, STM32 SDK paths)"
        },
        "cnext.indexing.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/build/**",
            "**/dist/**"
          ],
          "description": "Glob patterns for files/folders to exclude from workspace indexing"
        },
        "cnext.transpile.generateCFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate .c file alongside .cnx file (enables C/C++ IntelliSense for stdlib functions)"
        },
        "cnext.transpile.updateDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before updating the .c file after typing"
        },
        "cnext.serverPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to cnext binary (leave empty for auto-detection)"
        },
        "cnext.serverTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds for server communication"
        }
      }
    },
    "configurationDefaults": {
      "explorer.fileNesting.enabled": true,
      "explorer.fileNesting.expand": false,
      "explorer.fileNesting.patterns": {
        "*.cnx": "${capture}.c, ${capture}.cpp, ${capture}.h, ${capture}.hpp"
      },
      "[cnext]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  },
  "scripts": {
    "compile": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --loader:.js=js",
    "watch": "npm run compile -- --watch",
    "package": "vsce package --allow-missing-repository",
    "vscode:prepublish": "npm run compile -- --minify",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest run",
    "test:unit": "vitest run --exclude='src/__tests__/integration/**'",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:coverage": "vitest run --coverage",
    "pretest:vscode": "tsc -p tsconfig.test.json || echo 'tsc reported errors (pre-existing type issues) but files were emitted'",
    "test:vscode": "vscode-test",
    "test:all": "npm run test && npm run test:vscode",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.ts": [
      "oxlint --fix"
    ]
  },
  "volta": {
    "node": "24.13.1",
    "npm": "11.8.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "oxlint": "^1.48.0",
    "prettier": "^3.7.4",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
